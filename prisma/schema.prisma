generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id @default(uuid())
  email    String
  password String
  site     String
  blog     Blogs[]

  @@map("users")
}

model Blogs {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  content   Content[]
  image     String
  comments  Comments[]
  author    Users      @relation(fields: [userId], references: [id])
  userId    String

  @@map("blogs")
}

model Content {
  id        String @id @default(uuid())
  subtitle  String
  paragraph String
  blog      Blogs  @relation(fields: [blogId], references: [id])
  blogId    String

  @@map("content")
}

model Comments {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comment   String
  blog      Blogs    @relation(fields: [blogId], references: [id])
  blogId    String

  @@map("comments")
}
